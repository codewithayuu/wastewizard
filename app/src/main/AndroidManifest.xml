<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Camera permission -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Camera feature (not required so app is installable on devices without a camera) -->
    <uses-feature android:name="android.hardware.camera.any" android:required="false" />

    <!-- Storage permissions -->
    <!-- Android 13+ (Tiramisu) scoped read for images -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <!-- For Android 12 and below when picking from Gallery -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <!-- WRITE_EXTERNAL_STORAGE is not needed (and discouraged).
         We save to app-specific directory (pre-Android 10) or use MediaStore (Android 10+). -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.WasteWizard">

        <!-- Main launcher activity -->
        <activity
            android:name=".MainAppActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/Theme.WasteWizard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other activities -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:theme="@style/Theme.WasteWizard" />

        <activity
            android:name=".SimpleMainActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:theme="@style/Theme.WasteWizard" />

        <activity
            android:name=".TestMainActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:theme="@style/Theme.WasteWizard" />

        <activity
            android:name=".EnhancedMainActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:theme="@style/Theme.WasteWizard" />

        <!-- FileProvider for pre-Android 10 photo capture (TakePicture uses this when needed) -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>
</manifest>