<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WasteWizard" parent="Theme.Material3.Light.NoActionBar">
        <!-- Brand colors -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- System bars -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/card_background</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>

        <!-- Background -->
        <item name="android:windowBackground">@color/background_light</item>

        <!-- Surfaces -->
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@android:color/black</item>
    </style>

    <!-- Theme without action bar for splash -->
    <style name="Theme.WasteWizard.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

    <!-- Toolbar Title Text -->
    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Bottom Navigation Text Styles -->
    <style name="BottomNavTextActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="BottomNavTextInactive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>
</resources>