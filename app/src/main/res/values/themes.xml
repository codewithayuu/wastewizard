<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.WasteWizard" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Optional brand fallback for pre-Android 12 -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorSecondary">@color/accent_color</item>

        <!-- Apply to Preference screens -->
        <item name="preferenceTheme">@style/App.PreferenceTheme</item>

        <!-- Rounded shapes app-wide -->
        <item name="shapeAppearanceSmallComponent">@style/Shape.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/Shape.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/Shape.Large</item>

        <!-- Defaults -->
        <item name="materialCardViewStyle">@style/App.Card</item>
        <item name="materialButtonStyle">@style/App.Button.Filled</item>
        <item name="materialButtonOutlinedStyle">@style/App.Button.Outlined</item>
        <item name="floatingActionButtonStyle">@style/App.FAB</item>
        <item name="toolbarStyle">@style/App.Toolbar</item>
    </style>

    <!-- Theme without action bar for splash -->
    <style name="Theme.WasteWizard.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

    <!-- Toolbar Title Text -->
    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Bottom Navigation Text Styles -->
    <style name="BottomNavTextActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="BottomNavTextInactive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>
</resources>